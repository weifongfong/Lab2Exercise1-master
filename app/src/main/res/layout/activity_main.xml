<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0123456789012345"
            android:id="@+id/tvExpr"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:textSize="32sp"
            android:gravity="center_vertical|right"
            android:background="#ffc8dcff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvAns"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="4"
            android:textSize="32sp"
            android:gravity="center_vertical|right"
            android:background="#fffffff0"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="AC"
            android:id="@+id/ac"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="28sp"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:onClick="ACClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="BS"
            android:id="@+id/bs"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="28sp"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="2"
            android:onClick="BSClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="M+"
            android:id="@+id/madd"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="28sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="M-"
            android:id="@+id/msub"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="28sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="MR"
            android:id="@+id/mr"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="28sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="MC"
            android:id="@+id/mc"
            android:layout_row="3"
            android:layout_column="3"
            android:textSize="28sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="7"
            android:id="@+id/d7"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="28sp"
            android:onClick="digitClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="8"
            android:id="@+id/d8"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="28sp"
            android:onClick="digitClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="9"
            android:id="@+id/d9"
            android:layout_row="4"
            android:layout_column="2"
            android:textSize="28sp"
            android:onClick="digitClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="/"
            android:id="@+id/div"
            android:layout_row="4"
            android:layout_column="3"
            android:textSize="28sp"
            android:onClick="operatorClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="4"
            android:id="@+id/d4"
            android:layout_row="5"
            android:layout_column="0"
            android:textSize="28sp"
            android:onClick="digitClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="5"
            android:id="@+id/d5"
            android:layout_row="5"
            android:layout_column="1"
            android:textSize="28sp"
            android:onClick="digitClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="6"
            android:id="@+id/d6"
            android:layout_row="5"
            android:layout_column="2"
            android:textSize="28sp"
            android:onClick="digitClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="*"
            android:id="@+id/mul"
            android:layout_row="5"
            android:layout_column="3"
            android:textSize="28sp"
            android:onClick="operatorClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="1"
            android:id="@+id/d1"
            android:layout_row="6"
            android:layout_column="0"
            android:textSize="28sp"
            android:onClick="digitClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="2"
            android:id="@+id/d2"
            android:layout_row="6"
            android:layout_column="1"
            android:textSize="28sp"
            android:onClick="digitClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="3"
            android:id="@+id/d3"
            android:layout_row="6"
            android:layout_column="2"
            android:textSize="28sp"
            android:onClick="digitClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="-"
            android:id="@+id/sub"
            android:layout_row="6"
            android:layout_column="3"
            android:textSize="28sp"
            android:onClick="operatorClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="0"
            android:id="@+id/d0"
            android:layout_row="7"
            android:layout_column="0"
            android:textSize="28sp"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:onClick="digitClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="="
            android:id="@+id/eq"
            android:layout_row="7"
            android:layout_column="2"
            android:textSize="28sp"
            android:onClick="equalClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="+"
            android:id="@+id/add"
            android:layout_row="7"
            android:layout_column="3"
            android:textSize="28sp"
            android:onClick="operatorClicked" />

    </GridLayout>
</RelativeLayout>
